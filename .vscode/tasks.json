{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "xmake clean",
            "type": "shell",
            "command": "xmake",
            "args": ["clean"],
            "group": "build",
            "problemMatcher": "$gcc",
        },
        {
            "label": "xmake silent",
            "type": "shell",
            "command": "xmake",
            "args": [],
            "group": "build",
            "problemMatcher": "$gcc",
        },
        {
            "label": "xmake",
            "type": "shell",
            "command": "xmake",
            "args": ["-v"],
            "group": "build",
            "problemMatcher": "$gcc",
        },
        {
            "label": "xmake test",
            "type": "shell",
            "command": "xmake",
            "args": ["test/xmakefile.json"],
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": "xmake silent",
        },
        {
            "label": "xmake testWindow",
            "type": "shell",
            "command": "xmake",
            "args": ["testWindow/xmakefile.json", "clean", "&&", "xmake", "testWindow/xmakefile.json"],
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": "xmake silent",
        },
        {
            "label": "build and run testWindow with logging",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c", 
                "xmake testWindow/xmakefile.json && ./testWindow/.bin/Debug/testWindow > debug_output.txt 2>&1 && echo 'Output saved to debug_output.txt'"
            ],
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "run testWindow with output logging",
            "type": "shell",
            "command": "./testWindow/.bin/Debug/testWindow",
            "args": [],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "runOptions": {
                "runOn": "default"
            }
        }
    ]
}
