{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "xmake clean",
            "type": "shell",
            "command": "xmake",
            "args": ["clean"],
            "group": "build",
            "problemMatcher": "$gcc",
        },
        {
            "label": "xmake silent",
            "type": "shell",
            "command": "xmake",
            "args": [],
            "group": "build",
            "problemMatcher": "$gcc",
        },
        {
            "label": "xmake",
            "type": "shell",
            "command": "xmake",
            "args": ["-v"],
            "group": "build",
            "problemMatcher": "$gcc",
        },
        {
            "label": "make test",
            "type": "shell",
            "command": "make",
            "args": ["test", "-s", "-j"],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "make testApp",
            "type": "shell",
            "command": "make",
            "args": ["testApp", "-s", "-j"],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run testApp",
            "type": "shell",
            "command": "cd ${workspaceFolder}/testApp/.bin/ && ./testApp",
            "args": [],
            "group": "build",
            "dependsOn": "make testApp"
        }
    ]
}
