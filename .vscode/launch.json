{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch testApp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/testApp/.bin/Debug/testApp",
            "args": ["/home/xor/Pictures"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/testApp/.bin/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "make testApp",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
        },
        {
            "name": "(gdb) Launch test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test/.bin/test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/test/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "make test",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}
